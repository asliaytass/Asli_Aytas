@model Models.Entities.Publisher
@{
    ViewData["Title"] = "Edit";
}
<h1 class="mt-4">Publisher Edit Page</h1>
<hr>

 <form asp-action="Edit" class="w-50 mt-4">
    <div class="form-group ">
        <h4>
         <label class="control-label" asp-for="PublisherId">#@Model.PublisherId</label><br>

        </h4>
         <input type="hidden" asp-for="PublisherId">        
        <label class="control-label mt-3" asp-for="PublisherName">Publisher Name</label>
        <input type="text" asp-for="PublisherName" class="form-control">
        <label class="control-label mt-3" asp-for="PublisherCity">Publisher City</label>
        <input type="text" asp-for="PublisherCity" class="form-control">
        <label class="control-label mt-3" asp-for="PublisherMail">Publisher Mail</label>
        <input type="text" asp-for="PublisherMail" class="form-control">
    </div>
    <div class="form-group">
    <input type="submit" value="Save" class="btn btn-outline-success mt-4">
    </div>
</form> 