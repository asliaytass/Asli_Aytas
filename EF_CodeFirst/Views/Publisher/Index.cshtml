@model List<Models.Entities.Publisher>
@{
    ViewData["Title"] = "Index";
}

<h1>Publisher Page</h1>
<a asp-action="Create" class="text-decoration-none" style="color:#16a085">Create new publisher</a>


<div class="row mt-4">
    @foreach (var item in Model)
    {
        <div class="col-md-4">
            <div class="card text-dark bg-light my-4 shadow" style="width: 21rem;">
                <div class="card-header d-flex justify-content-between">
                    <a asp-action="Edit" asp-route-id="@item.PublisherId"><i
                        class="fa-solid fa-gear text-secondary fs-5 "></i></a>
                    <a asp-action="Delete" asp-route-id="@item.PublisherId"><i
                        class="fa-solid fa-trash-can text-danger fs-5"></i></a>
                </div>
                <a asp-action="Details" asp-route-id="@item.PublisherId" class="text-decoration-none">
                    <div class="card-body d-flex justify-content-center align-items-center" style="height:120px">
                        <h5 class="card-title fw-bold fs-3 text-center" style="color:#2c3e50;">@item.PublisherName</h5>
                    </div>
                </a>

            </div>
        </div>
    }
</div>