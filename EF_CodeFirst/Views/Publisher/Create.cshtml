@model Models.Entities.Publisher
@{
    ViewData["Title"] = "Create";
}
<h1>New Publisher</h1>
<div class="row">
    <div class="col">
        <form asp-action="Create" class="w-50">
            <div class="form-group mt-4">
                <label class="control-label ">Publisher Name</label>
                <input type="text" asp-for="PublisherName" class="form-control">
                <label class="control-label mt-2">Publisher City</label>
                <input type="text" asp-for="PublisherCity" class="form-control">
                <label class="control-label mt-2">Publisher Mail</label>
                <input type="text" asp-for="PublisherMail" class="form-control">
            </div>
            <div class="form group">
                <button type="submit" class="border-0 px-4 py-1"><i class="fa-solid fa-plus fs-2 " style="color:#16a085;"></i></button>
            </div>
        </form>
    </div>
</div>