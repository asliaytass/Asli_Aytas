@model Models.Entities.Category
@{
    ViewData["Title"] = "Create";
}
<h1 class="mt-4">New Category</h1>
<hr>
<div class="row">
    <div class="col">
        <form asp-action="Create" class="w-50">
            <div class="form-group mt-3">
                <label class="control-label" style="color:#16a085;">Category Name</label>
                <div class="d-flex justify-content-between">
                 <input type="text" asp-for="CategoryName" class="form-control me-2">
                 <button type="submit"class="border-0 mx-3 px-4"><i class="fa-solid fa-plus fs-2 " style="color:#16a085;"></i></button>

                </div>
           
            </div>
           
        
        </form>
    </div>
</div>

