@model Models.Entities.Author
@{
    ViewData["Title"] = "Create";
}
<h1 class="mt-4">New Author</h1>
<hr>
<div class="row">
    <div class="col">
        <form asp-action="Create" class="w-50">
            <div class="form-group mt-3">
                <label class="control-label ">Author Name</label>
                 <input type="text" asp-for="AuthorName" class="form-control ">
                   <label class="control-label mt-2">Author Surname</label>
                 <input type="text" asp-for="AuthorSurname" class="form-control ">
                      <label class="control-label mt-2">Author Date of Birth</label>
                      <input type="date" asp-for="AuthorDateOfBirth" class="form-control">              

                <div class="d-flex justify-content-between">
                 <button type="submit"class="border-0  px-4 py-1 mt-3"><i class="fa-solid fa-plus fs-2 " style="color:#16a085;"></i></button>

                </div>
           
            </div>
           
        
        </form>
    </div>
</div>